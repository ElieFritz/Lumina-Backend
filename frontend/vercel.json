{
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    }
  ],
        "rewrites": [
          {
            "source": "/api/(.*)",
            "destination": "https://lumina-csjl.onrender.com/api/$1"
          }
        ]
}
